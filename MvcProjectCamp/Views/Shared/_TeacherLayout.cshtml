                <span class="brand-text font-weight-light">BANÜ Okulları</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="@teacherImage" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
