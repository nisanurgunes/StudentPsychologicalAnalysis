
@{
    Layout = null;
}


<!doctype html>
<html lang="en">
<head>
    <title>BANÜ Okulları</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="~/Content/favicon.ico" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-20/css/style.css">
    <style>
        .circular-image {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            margin: 0 auto 20px;
            display: block;
            background-size: cover;
            background-position: center;
        }
        .translucent-background {
            background-color: rgba(173, 216, 230, 0.5); /* Beyaz renk, %50 opaklık */
            padding: 20px; /* İçerik ile arka plan arasında boşluk */
            border-radius: 5px; /* Köşeleri yuvarlama */
            width: 720px;
            height: 690px;
            margin-left: 195px;
        }
    </style>
</head>
<body class="img js-fullheight" style="background-image: url(/AdminLTE-3.0.4/login-form-20/images/Untitled1.png);">
    <section class="ftco-section">
        <div class="container">
            <div class="translucent-background">
                <div class="row justify-content-center">
                    <div class="col-md-6 text-center mb-5">
                        <h2 class="heading-section">BANÜ Okulları Yönetici Girişi</h2>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="login-wrap p-0">
                            <div class="circular-image" style="background-image: url('/AdminLTE-3.0.4/login-form-20/images/businessman.png');"></div>
                            <h3 class="text-center mb-0">Yönetici Girişi</h3>
                            <p class="text-center">Lütfen bilgilerinizi kutucuklara girin</p>
                            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                            {
                                <div class="form-group">

                                    <input type="text" class="form-control" name="AdminUserName" placeholder="Kullanıcı Adı" required>
                                </div>
                                <div class="form-group">

                                    <input type="password" class="form-control" name="AdminPassword" placeholder="******" required>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary submit px-3">Giriş Yap</button>
                                </div>
                            }
                            <div class="w-100 text-center mt-4 text">
                                <a href="/Home/HomePage/">Ana Sayfaya Dön</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>

    <script src="~/AdminLTE-3.0.4/login-form-20/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/main.js"></script>

</body>
</html>