@model EntityLayer.Concrete.SchoolClass

@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h1>Yeni Sınıf Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddSchoolClass", "SchoolClass", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.ClassList)
        @Html.ValidationMessageFor(x => x.ClassList)
        <br /><br />
        @Html.Label("Açıklamayı Yazınız")
        @Html.TextBoxFor(x => x.ClassesTeacher)
        @Html.ValidationMessageFor(x => x.ClassesTeacher)
        <br /><br />
        <button>Kaydet</button>
    </div>
}



