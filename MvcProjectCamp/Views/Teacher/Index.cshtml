@using EntityLayer.Concrete
@model List<Teacher>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- /.navbar -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>BANÜ Okulları Öğretmen Kadrosu</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
        <section class="content">
            <!-- Default box -->
            <div class="card card-solid">
                <div class="card-body pb-0">
                    <div class="card-columns">
                        @foreach (var item in Model)
                        {
                            <div class="card bg-light" style="font-size: 0.8em;">
                                <div class="card-header text-muted border-bottom-0">
                                    @item.TeacherClass
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="lead" style="font-size: 1.2em;"><b>@item.TeacherName @item.TeacherSurname</b></h2>
                                            <p class="text-muted text-sm"><b>Hakkında: </b> @item.TeacherAbout </p>
                                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Mail: @item.TeacherMail</li>
                                            </ul>
                                        </div>
                                        <div class="col-5 text-center">
                                            <img src="@item.TeacherImage" alt="" class="img-circle img-fluid" style="max-width: 80px;">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a href="/Teacher/EditTeacher/@item.TeacherID" class="btn btn-sm btn-primary">
                                            <i class="fas fa-user"></i> Profili Düzenle
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
    
        <a href="/Teacher/AddTeacher/" class="btn btn-info">Yeni Öğretmen Kaydı</a>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</body>
</html>
