@model EntityLayer.Concrete.Student

@{
    ViewBag.Title = "Student Login";
}

<h2>Student Login</h2>

@using (Html.BeginForm("StudentLogin", "Student", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.StudentUserName)
        @Html.TextBoxFor(m => m.StudentUserName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.StudentPassword)
        @Html.PasswordFor(m => m.StudentPassword, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}
