@model IEnumerable<EntityLayer.Concrete.StudentText>
@using EntityLayer.Concrete
@{
    ViewBag.Title = "TextResults";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        .fixed-height-row {
            height: 70px; /* İstediğiniz sabit yüksekliği buraya yazın */
        }

        .text-right {
            text-align: right;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Text Results</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Başlık İşlemleri</h3>
                </br>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">#</th>
                            <th style="width: 18%">Metinler</th>
                            <th style="width: 8%">Analiz Sonuçları</th>
                            <th style="width: 5%">Oluşturan Öğrenci</th>
                            <th style="width: 5%" class="text-right">Şubeler</th>
                            <th style="width: 10%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.StudentTextID
                                </td>
                                <td>
                                    <a>
                                        @item.StudentTextContent
                                    </a>
                                    <br />
                                    <small>
                                        @(((DateTime)item.StudentTextDate).ToString("dd-MMM-yyyy"))
                                    </small>
                                </td>
                                <td>
                                    @item.ClassificationResult
                                </td>
                                <td>
                                    <div>
                                        <img alt="Avatar" class="table-avatar" src="@item.Student.StudentImage">
                                    </div>
                                    <div>
                                        <small>@item.Student.StudentName @item.Student.StudentSurname</small>
                                    </div>
                                </td>
                                <td class="text-right">
                                    @item.Student.StudentClass
                                </td>
                                <td class="project-actions text-right">
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>

