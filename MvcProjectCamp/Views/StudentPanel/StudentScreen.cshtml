@model EntityLayer.Concrete.Student
@{
    ViewBag.Title = "StudentScreen";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Metin Alanı Örneği</title>
    <style>
        body {
            display: inline-block;
            justify-content: center;
            align-items: center;
            height: 100%;
            width:100%;
            margin: 0;
            background-color: #f0f0f0;
        }

        .container {
            width: 100%;
            max-width: 800px;
            padding: 20px;
            box-shadow: 0px 10px 34px -15px rgba(0, 0, 0, 0.24);
            background-color: #fff;
            border-radius: 5px;
        }

        .form-group {
            margin: 0;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            resize: none; /* Kullanıcının yeniden boyutlandırmasını engeller */
            overflow: hidden; /* Scroll barları gizler */
        }

            .form-control:focus {
                outline: none;
                border-color: #007bff;
            }
    </style>
</head>
<body class="">
    <!-- /.navbar -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Lütfen Aşağıdaki Alanı Doldurunuz</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    <div class="col-12">
                        <div class="container">
                            <div class="form-group">
                                <label for="textarea">Metin Alanı:</label>
                                <textarea id="textarea" class="form-control" rows="5" placeholder="Metin giriniz"></textarea>
                            </div>
                            <div class="form-group" style="display: flex; justify-content: flex-end;">
                                <button type="submit" class="btn btn-primary">Gönder</button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->

    <script>
        const textarea = document.getElementById('textarea');

        textarea.addEventListener('input', function () {
            this.style.height = 'auto';
            this.style.height = (this.scrollHeight) + 'px';
        });
    </script>
</body>
</html>


